@model IEnumerable<Day15Assignment.Models.Course>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<h2>Number of avaliable books are @ViewBag.noCourses</h2>
<h2>@ViewBag.tech</h2>
<h2>@ViewData["Message"]</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CFee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Technology)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CFee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Technology)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Cid }) |
            @Html.ActionLink("Details", "Details", new { id=item.Cid }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Cid })
        </td>
    </tr>
}

</table>
